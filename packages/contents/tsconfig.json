{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"composite": true,
		"declaration": true,
		"paths": {
			"@kingdom-builder/engine": ["packages/engine/dist/index"],
			"@kingdom-builder/engine/*": ["packages/engine/dist/*"],
			"@kingdom-builder/protocol": [
				"packages/protocol/src/index",
				"packages/protocol/dist/index"
			],
			"@kingdom-builder/protocol/*": [
				"packages/protocol/src/*",
				"packages/protocol/dist/*"
			],
			"@kingdom-builder/contents": ["packages/contents/src/index"],
			"@kingdom-builder/contents/*": ["packages/contents/src/*"],
			"@kingdom-builder/*": ["packages/*/src"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "tests"],
	"references": [
		{ "path": "../engine/tsconfig.json" },
		{ "path": "../protocol/tsconfig.json" }
	]
}
